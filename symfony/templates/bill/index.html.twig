{% extends 'base.html.twig' %}

{% block title %}Bill index{% endblock %}

{% block body %}
<div class="container bordrad10 margtop white">
    <div class="row">
        <div class="col s12 white bordrad10 pad20 margtop">
            <h1 class="titlehun">Bill index</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Date</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for bill in bills %}
                    <tr>
                        <td>{{ bill.id }}</td>
                        <td>{{ bill.date ? bill.date|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <button class="btn btn-lg bgblur">
                                <a class="white-text" href="{{ path('bill_show', {'id': bill.id}) }}">show</a>
                            </button>
                            <button class="btn btn-lg bgblur">
                                <a class="white-text" href="{{ path('bill_edit', {'id': bill.id}) }}">edit</a>
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <button class="btn btn-lg bgblur">
                <a class="white-text" href="{{ path('bill_new') }}">Create new</a>
            </button>
        </div>
    </div>
</div>
{% endblock %}
