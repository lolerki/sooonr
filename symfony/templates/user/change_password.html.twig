{% extends 'base.html.twig' %}

{% block title %}{{ 'title.change_password'|trans }}{% endblock %}

{% block body %}
    <div class="container bordrad10 margtop white">
        <div class="row">
            <div class="col s12 white bordrad10 pad20 margtop">
                <div class="alert alert-info" role="alert">{{ 'info.change_password'|trans }}</div>

                {{ form_start(form) }}
                {{ form_widget(form) }}

                <button type="submit" class="btn bgblur">
                    <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}