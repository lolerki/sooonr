{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
<div class="container bordrad10 margtop white">
    <div class="row">
        <div class="col s12 white bordrad10 pad20 margtop">
            <h1 class="titlehun">Event</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ event.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ event.title }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ event.description }}</td>
                    </tr>
                    <tr>
                        <th>CreateAt</th>
                        <td>{{ event.createAt ? event.createAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>DateEvent</th>
                        <td>{{ event.dateEvent ? event.dateEvent|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>LinkGoogle</th>
                        <td>{{ event.linkGoogle }}</td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td>{{ event.price }}</td>
                    </tr>
                </tbody>
            </table>
            <button class="btn btn-lg bgblur">
                <a class="white-text" href="{{ path('event_index') }}">back to list</a>
            </button>
            <button class="btn btn-lg bgblur">
                <a class="white-text" href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
            </button>
            {{ include('event/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
