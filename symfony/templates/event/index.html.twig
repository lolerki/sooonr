{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
<div class="container bordrad10 margtop white">
    <div class="row">
        <div class="col s12 white bordrad10 pad20 margtop">
            <h1>Event index</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>CreateAt</th>
                        <th>DateEvent</th>
                        <th>LinkGoogle</th>
                        <th>Price</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.id }}</td>
                        <td>{{ event.title }}</td>
                        <td>{{ event.description }}</td>
                        <td>{{ event.createAt ? event.createAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ event.dateEvent ? event.dateEvent|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ event.linkGoogle }}</td>
                        <td>{{ event.price }}</td>
                        <td>
                            <button class="btn btn-lg bgblur">
                                <a class="white-text" href="{{ path('event_show', {'id': event.id}) }}">show</a>
                            </button>
                            <button class="btn btn-lg bgblur">
                                <a class="white-text" href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <button class="btn btn-lg bgblur">
                <a class="white-text" href="{{ path('event_new') }}">Create new</a>
            </button>
        </div>
    </div>
</div>
{% endblock %}
