<form method="post" action="{{ path('setting_delete', {'id': app.user.profile.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ profile.id) }}">
    <button class="btn bgblured right">Delete</button>
</form>
