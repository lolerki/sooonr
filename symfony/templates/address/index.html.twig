{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
<div class="container bordrad10 margtop white">
    <div class="row">
        <div class="col s12 white bordrad10 pad20 margtop">
            <h1 class="titlehun">Address index</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Street</th>
                        <th>Street_line2</th>
                        <th>City</th>
                        <th>Zip_code</th>
                        <th>Country</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for address in addresses %}
                    <tr>
                        <td>{{ address.id }}</td>
                        <td>{{ address.street }}</td>
                        <td>{{ address.streetLine2 }}</td>
                        <td>{{ address.city }}</td>
                        <td>{{ address.zipCode }}</td>
                        <td>{{ address.country }}</td>
                        <td>
                            <button class="btn btn-lg bgblur">
                                <a class="white-text" href="{{ path('address_show', {'id': address.id}) }}">show</a>
                            </button>
                            <button class="btn btn-lg bgblur">
                                <a class="white-text" href="{{ path('address_edit', {'id': address.id}) }}">edit</a>
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <button class="btn btn-lg bgblur">
                <a class="white-text" href="{{ path('address_new') }}">Create new</a>
            </button>
        </div>
    </div>
</div>
{% endblock %}
