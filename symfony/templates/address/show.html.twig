{% extends 'base.html.twig' %}

{% block title %}Address{% endblock %}

{% block body %}
<div class="container bordrad10 margtop white">
    <div class="row">
        <div class="col s12 white bordrad10 pad20 margtop">
            <h1 class="titlehun">Address</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ address.id }}</td>
                    </tr>
                    <tr>
                        <th>Street</th>
                        <td>{{ address.street }}</td>
                    </tr>
                    <tr>
                        <th>Street_line2</th>
                        <td>{{ address.streetLine2 }}</td>
                    </tr>
                    <tr>
                        <th>City</th>
                        <td>{{ address.city }}</td>
                    </tr>
                    <tr>
                        <th>Zip_code</th>
                        <td>{{ address.zipCode }}</td>
                    </tr>
                    <tr>
                        <th>Country</th>
                        <td>{{ address.country }}</td>
                    </tr>
                </tbody>
            </table>
            <button class="btn btn-lg bgblur">
                <a class="white-text" href="{{ path('address_index') }}">back to list</a>
            </button>
            <button class="btn btn-lg bgblur">
                <a class="white-text" href="{{ path('address_edit', {'id': address.id}) }}">edit</a>
            </button>
            {{ include('address/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
