{% extends 'base.html.twig' %}

{% block title %}ArtistType index{% endblock %}

{% block body %}
<div class="container bordrad10 margtop white">
    <div class="row">
        <div class="col s12 white bordrad10 pad20 margtop">
            <h1 class="titlehun">ArtistType index</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for artist_type in artist_types %}
                    <tr>
                        <td>{{ artist_type.id }}</td>
                        <td>{{ artist_type.name }}</td>
                        <td>
                            <button class="btn btn-lg bgblur">
                                <a class="white-text" href="{{ path('artist_type_show', {'id': artist_type.id}) }}">show</a>
                            </button>
                            <button class="btn btn-lg bgblur">
                                <a class="white-text" href="{{ path('artist_type_edit', {'id': artist_type.id}) }}">edit</a>
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <button class="btn btn-lg bgblur">
                <a class="white-text" href="{{ path('artist_type_new') }}">Create new</a>
            </button>
        </div>
    </div>
</div>
{% endblock %}
